<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameOver"
    android:padding="40dp"
    android:orientation="vertical"
    android:background="@drawable/background_day">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gameover" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="YOUR POINTS: "
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/gameover_gamepoints"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/startbutton"
            android:id="@+id/gameover_gamerestart"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:hint="ENTER YOUR NAME TO SAVE THE RECORD:"
            android:textSize="20sp"
            android:id="@+id/gameover_textname"/>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/save"
            android:id="@+id/gameover_save"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/records"
            android:id="@+id/gameover_recordlist"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/menu"
            android:id="@+id/gameover_backtomenu"/>


    </LinearLayout>


</RelativeLayout>