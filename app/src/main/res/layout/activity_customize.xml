<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_day"
    android:id="@+id/homepage_welcomepage">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:fontFamily="@font/etienne"
            android:textColor="#fff"
            android:text="Choose Bird :"
            android:textSize="26dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:paddingBottom="0dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/bluebird_1"
                android:id="@+id/changebird_bird1"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/redbird_1"
                android:id="@+id/changebird_bird2"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/yellowbird_1"
                android:id="@+id/changebird_bird3"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:paddingTop="0dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_black_24dp"
                android:id="@+id/chosen_blue"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"
                android:visibility="invisible"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_black_24dp"
                android:id="@+id/chosen_red"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"
                android:visibility="invisible"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_black_24dp"
                android:id="@+id/chosen_yellow"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"
                android:visibility="invisible"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:fontFamily="@font/etienne"
            android:textColor="#fff"
            android:text="Choose Background:"
            android:textSize="26dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageButton
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/gameoverbackground"
            android:paddingEnd="15dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/nightbackground"
                android:paddingStart="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="70dp"
                android:background="#fff"
                android:text="Continue"
                android:textStyle="bold"
                android:textSize="30sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>