<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_day"
    android:id="@+id/homepage_welcomepage">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="CHOOSE THE BIRD YOU WANT TO PLAY WITH:"
            android:textSize="26dp"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/bluebird_1"
                android:id="@+id/changebird_bird1"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/redbird_1"
                android:id="@+id/changebird_bird2"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/yellowbird_1"
                android:id="@+id/changebird_bird3"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">



            <ImageButton
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/gameoverbackground"
                android:id="@+id/changebird_bird4"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"/>
        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="25dp"
                android:textSize="26dp"
                android:textStyle="italic"
                android:gravity="center"
                android:id="@+id/changebird_setText"/>

    </LinearLayout>


</RelativeLayout>